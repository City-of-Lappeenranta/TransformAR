{
  "name": "citizen-webapp",
  "version": "1.0.0-alpha.2",
  "scripts": {
    "ng": "ng",
    "preserve": "npm run theme; npm run generate-icons",
    "serve": "ng serve",
    "prestart": "npm run theme; npm run generate-icons",
    "start": "npx http-server -p 8080 -c-1 dist/citizen-webapp/browser",
    "watch": "ng build --watch --configuration production",
    "prebuild": "npm run theme; npm run generate-icons",
    "prebuild:development": "npm run theme; npm run generate-icons",
    "prebuild:production": "npm run theme; npm run generate-icons",
    "build": "ng build",
    "build:development": "ng build",
    "build:production": "ng build --configuration production",
    "test": "jest",
    "test:ci": "npm run generate-icons; jest --ci --collect-coverage ",
    "lint": "npm run lint:ts && npm run lint:styles",
    "lint:ts": "ng lint",
    "lint:styles": "stylelint \"app/**/*.scss\"",
    "prelint:ci": "npm run mkdirp reports",
    "lint:ci": "concurrently \"npm:lint:ts:ci\" \"npm:lint:styles:ci\" -s all",
    "lint:ts:ci": "node prebuild/generate-eslint-reports",
    "lint:styles:ci": "stylelint \"app/**/*.scss\" --formatter json --output-file reports/stylelint-report.json --max-warnings 0",
    "mkdirp": "mkdirp",
    "theme": "sass --update assets/themes/mytheme/theme.scss:assets/theme.css",
    "generate-icons": "node prebuild/generate-svg-icons.ts",
    "prestorybook": "npm run theme; npm run generate-icons",
    "storybook": "ng run citizen-webapp:storybook",
    "build-storybook": "ng run citizen-webapp:build-storybook",
    "sonar-scanner": "sonar-scanner",
    "sentry-cli": "sentry-cli"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/router": "^17.1.0",
    "@angular/service-worker": "^17.1.0",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "@sentry/angular-ivy": "^7.109.0",
    "@sentry/cli": "^2.31.0",
    "browser-image-compression": "^2.0.2",
    "concurrently": "^8.2.2",
    "eslint-plugin-html": "^8.0.0",
    "google-libphonenumber": "^3.2.34",
    "jest-junit": "^16.0.0",
    "jest-mocha-spec-reporter": "^1.0.17",
    "leaflet": "^1.9.4",
    "lodash-es": "^4.17.21",
    "mkdirp": "^3.0.1",
    "ngx-google-analytics": "^14.0.1",
    "primeng": "^17.5.0",
    "rxjs": "~7.8.0",
    "sonarqube-scanner": "^3.3.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-scss": "^6.2.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.2",
    "@angular-eslint/builder": "17.1.0",
    "@angular-eslint/eslint-plugin": "17.1.0",
    "@angular-eslint/eslint-plugin-template": "17.1.0",
    "@angular-eslint/schematics": "17.1.0",
    "@angular-eslint/template-parser": "17.1.0",
    "@angular/cli": "^17.1.2",
    "@angular/compiler-cli": "^17.1.0",
    "@sentry/cli": "^2.31.0",
    "@storybook/addon-essentials": "^7.6.14",
    "@storybook/addon-interactions": "^7.6.14",
    "@storybook/addon-links": "^7.6.14",
    "@storybook/angular": "^7.6.14",
    "@storybook/blocks": "^7.6.14",
    "@storybook/test": "^7.6.14",
    "@types/google-libphonenumber": "^7.4.30",
    "@types/jest": "^29.5.12",
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-storybook": "^0.8.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shallow-render": "^17.0.1",
    "storybook": "^7.6.14",
    "typescript": "^5.3.3"
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "sonar-report.xml",
    "indent": 2
  }
}
